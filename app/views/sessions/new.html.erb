<header>
  <div id="app-title" class="caps">
    <h1>PhotoFit</h1>
    <span>By <img src="/assets/logo.png" alt=""></span>
  </div>
  <h2>Sign In</h2>
  <p>New? <a href="/users/new">Create Account.</a></p>
</header><!-- /header -->

<div class="user-form">
  <%= form_tag '/login' do %>
    <%= text_field_tag :email, nil, placeholder: 'Email', :class => "user-form-field" %>

    <%= password_field_tag :password, nil, placeholder: 'Password', :class => "user-form-field" %>
    <%= submit_tag "Log In", :class => "button", :id => "login-button" %>
  <% end %>

