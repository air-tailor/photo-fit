<!DOCTYPE html>
<html>
  <head>
    <title>PhotoFit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>

      <div id="nav_bar_div">

          <div id="nav_logo_div">
            <img id="nav_logo" src="/assets/air_tailor_logo.png">
          </div>

          <div id="nav_bar_links">
            <a href="/users/<%= current_user.id %>">Profile</a>
            <a href="/users/<%= current_user.id %>/edit">Account</a>
            <% if current_user.is_admin? %>
              <%= link_to 'User List', users_path %>
              <a href="/admin">Admin Page</a>
            <% end %>
            <a href="/logout">Logout</a>
          </div>

      </div>
      <hr id="nav_hr">
      <% else %>
      <!-- do nothing -->
      <% end %>



    <br>

    <%= yield %>

  </body>
</html>
