  <%= form_for @garment, url: {action: "update"} do |f| %>

    <label>Title</label>
    <%= f.text_field :title %>
    <label>Brand</label>
    <%= f.text_field :brand %>
    <label>Notes</label>
    <%= f.text_area :notes %>
