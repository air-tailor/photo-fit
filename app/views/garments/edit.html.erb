<div class="four_fifth_width float_left">

  <h2 id="new_garment_title">Edit Garment</h2>
  <%= form_for @garment, url: {action: "update"} do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>
    <label>Brand</label>
    <%= f.text_field :brand %>
    <label>Notes</label>
    <%= f.text_area :notes %>
    <label>Image</label>
    <%= f.file_field :image_url %>
    <%= f.submit "Update", data: { confirm: "You sure?" } %>
  <% end %>

</div>

